# Database Configuration
POSTGRES_DB=miniatures_erp
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_PORT=5432

# For local development without Docker:
# DATABASE_URL=postgresql://postgres:postgres@localhost:5432/miniatures_erp

# Backend Configuration
BACKEND_PORT=8000
DEBUG=True
SECRET_KEY=your-secret-key-here-change-in-production

# WooCommerce Integration
WOOCOMMERCE_URL=https://your-woocommerce-site.com
WOOCOMMERCE_CONSUMER_KEY=ck_your_consumer_key_here
WOOCOMMERCE_CONSUMER_SECRET=cs_your_consumer_secret_here

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@miniatures.lk

# File Upload Configuration
FILE_UPLOAD_PATH=/app/uploads
MAX_FILE_SIZE_MB=10

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Production Web Server (for docker-compose.prod.yml)
HTTP_PORT=80
HTTPS_PORT=443
